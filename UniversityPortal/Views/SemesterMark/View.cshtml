@model UniversityPortal.Models.SemesterStudentViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SemesterYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SemesterYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublish)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublish)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsResult)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsResult)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResultDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsResult)
            {
                @Html.DisplayFor(model => model.ResultDate)
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a> |
    @if (!Model.IsResult && Model.IsPublishResult)
    {
        @Html.ActionLink("Publish Result", "Publish", new {  sem = Model.Semester,year=Model.SemesterYear  })
    }

</div>

<hr />
<partial name="_Student" model=Model.Students />