@model IEnumerable<UniversityPortal.Models.StudentCertificateViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Verify Certificate</h1>


<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmissionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVerifyCertifiate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRejectCertifiate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerifyDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>               
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmissionNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.University)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsVerifyCertifiate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRejectCertifiate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerifyDate)
                </td>
                @if (item.IsVerifyCertifiate || item.IsRejectCertifiate)
                {
                    <td></td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Approve", "VerifyCertificate", new {  id=item.Id, status = true  }) |
                        @Html.ActionLink("Reject", "VerifyCertificate", new {  id=item.Id, status = false })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
