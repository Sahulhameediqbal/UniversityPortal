@model UniversityPortal.Models.PaymentViewModel

@{
    ViewData["Title"] = "AddPayment";
}


<div class="row justify-content-center">
    <div class="col-md-4 payment-set">

        <h1 class="pt-2">Payment</h1>
        <div class="sub-text">Payment Options: Card(Debit Card Only)</div>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for=@Model.FeesType />
                <input type="hidden" asp-for=@Model.Sem />
                <input type="hidden" asp-for=@Model.Year />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNo" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="CardNo" class="form-control" maxlength="16" />
                    <i class="fa-solid fa-credit-card input-icon"></i>
                </div>
                <span asp-validation-for="CardNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Valid thru</label>
                <div class="d-flex">
                    <div class="me-2"><input asp-for="DateMM" class="form-control" maxlength="3" placeholder="MM" /></div>
                    <div class="me-2"><input asp-for="DateYY" class="form-control" maxlength="4" placeholder="YYYY" /></div>
                </div>
                <span asp-validation-for="DateMM" class="text-danger"></span>
                <span asp-validation-for="DateYY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVV" class="control-label"></label>
                <input asp-for="CVV" class="form-control" maxlength="3" />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 text-end">
                <input type="submit" value="Pay Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}