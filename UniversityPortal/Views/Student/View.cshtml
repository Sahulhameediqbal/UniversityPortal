<div class="mt-2 mx-2">
    @if (@Model.Role == "Student")
    {
        <a class="btn btn-back" asp-controller="Home" asp-action="Index">Back to List</a>
    }
    else if (Model.Role == "Accountant" && Model.IsPaid == true && Model.IsCompleted == false)
    {
        @Html.ActionLink("Course Completed", "CourseComplete", "Student",new {id=Model.Id})        
        <span>|</Span>
        <a class="btn btn-back" asp-action="Index">Back to List</a>
    }
    else if (Model.Role == "Admin")
    {
        <span class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) </span>
        <span>|</Span>
        <a class="btn btn-back" asp-action="Index">Back to List</a>
    }
    else
    {
         <a class="btn btn-back" asp-action="Index">Back to List</a>
    }

    @if (Model.IsPaid == false && @Model.Role == "Student")
    {   
        <span>|</Span>
        <div class="btn btn-primary">@Html.ActionLink("Pay Tution Fees", "Index", "Payment", new { type = "TutionFees" })</div>
    }
</div>
