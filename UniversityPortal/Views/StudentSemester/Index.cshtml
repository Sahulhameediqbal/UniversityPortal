@model IEnumerable<UniversityPortal.Models.StudentSemesterViewModel>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SemesterYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamPublishedDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SemesterYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExamPublishedDate)
                </td>
                <td>
                    @Html.ActionLink("View", "Index","StudentExam", new { sem=item.Semester,year = item.SemesterYear, result = item.IsResult })
                </td>
                <td>
                    @if (item.IsPaid && !item.IsResult)
                    {
                        @Html.ActionLink("Hall Ticket", "ViewHallTicket","StudentExam", new { sem=item.Semester,year = item.SemesterYear }, new { target = "_blank" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
