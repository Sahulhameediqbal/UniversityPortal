@model UniversityPortal.Models.CertificateViewModel
@{
    Layout = "_ExportToPDFLayout";
    var USculture = new System.Globalization.CultureInfo("en-US");
}

<!DOCTYPE html>
<html>
<head>
    <title>Hall Ticket</title>
    <style>
        body {
            background-color: #fcfcfc;
        }

        .certificate-container {
            width: 800px;
            height: 820px;
            margin: 0 auto;
            background-color: #fdf8ea;
            padding: 20px;
            color: #133e6d;
            font-family: 'Open Sans', sans-serif;
            box-shadow: 0 0 5px rgb(0 0 0 / 50%);
            border: 8px solid #133e6d;
        }

        .header {
            margin: 0 auto;
            width: fit-content;
            text-align: center;
        }

        .logo img {
            width: 120px;
            height: auto;
        }

        .c-name {
            font-size: 44px;
            font-weight: bold;
            color: #133e6d;
            padding-top: 15px;
            margin-left: 10px;
        }

        h1 {
            text-align: center;
        }

        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #b41820;
                color: white;
            }

        .candidate {
            line-height: 28px;
            width: 100%;
        }

        .candidate1 {
            font-weight: bold;
            float: left;
        }

        .candidate2 {
            font-weight: bold;
            margin-left: auto;
            float: right;
        }

        .candidate1 span {
            font-weight: normal;
        }

        .candidate2 span {
            font-weight: normal;
        }

        .candidate1 ul {
            list-style: none;
            padding-left: 0;
        }

        .candidate2 ul {
            list-style: none;
            padding-left: 0;
        }

        .p-text {
            padding-top: 20px;
            text-align: center;
            line-height: 40px;
            font-weight: 600;
            font-size: 18px;
        }

            .p-text span {
                font-size: 22px;
                font-weight: bold;
            }

        .seal {
            text-align: center;
        }

        .sign {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="certificate-container">
        <div class="header">
            <div class="logo">
                <img src="~/img/king.svg" />
            </div>
            <div class="c-name">@Model.UniversityName.ToString().ToUpper()</div>
        </div>
        <h1>EXAMINATION HALL TICKET</h1>
        <div class="candidate">
            <div class="candidate1">
                <ul>
                    <li>Candidate Name: <span>@Model.Name</span></li>
                    <li>Date of Birth: <span>@Model.DOB</span></li>
                    <li>College: <span>@Model.UniversityName</span></li>
                </ul>
            </div>
            <div class="candidate2">
                <ul>
                    <li>Roll No: <span>@Model.RollNo</span></li>
                    <li>Gender: <span>@Model.Gender</span></li>
                    <li>Month & Year: <span>@Model.Month @Model.Year</span>
                </ul>
            </div>
        </div>



        <table id="customers">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Semester</th>
                    <th>Exam Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model?.StudentExam?.CurrentPapers)
                {
                    <tr>
                        <td>@item.Subject</td>
                        <td>@item.BaseSemester</td>
                        <td>@item.ExamDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                }
                @if(Model.StudentExam.ArrearPapers.Count()>0)
                {
                    @foreach (var item in Model?.StudentExam?.ArrearPapers)
                    {
                        <tr>
                            <td>@item.Subject</td>
                            <td>@item.BaseSemester</td>
                            <td>@item.ExamDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

